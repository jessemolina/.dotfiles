# keys
set -o vi

# ls
alias la='ls -la'  # List all files, including hidden
alias ld='ls -l | grep "^d"'  # List directories only
alias ll='ls -l'  # Long format list
alias lh='ls -lh'  # List with human-readable sizes
alias lt='ls -lt'  # List sorted by modification time
alias lS='ls -lS'  # List sorted by size
alias lc='ls --color=auto'  # Colorized listing
alias lf='ls -l | grep "^-"'  # List files only
alias lr='ls -lr'  # Reverse sorting order
alias l1='ls -1'  # List in single column
alias li='ls -i'    # Display inode numbers

